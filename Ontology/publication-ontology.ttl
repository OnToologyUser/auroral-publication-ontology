@prefix : <https://auroral.iot.linkeddata.es/def/publication#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix pub: <https://auroral.iot.linkeddata.es/def/publication#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@base <https://auroral.iot.linkeddata.es/def/publication#> .

<https://auroral.iot.linkeddata.es/def/publication#> rdf:type owl:Ontology ;
                                               dc:creator "Oliv√©r Angyal" ;
                                               dc:description "This ontology aims at modelling the publication information for the AURORAL project." ;
                                               dcterms:license <http://purl.org/NET/rdflicense/cc-by4.0> .

#################################################################
#    Annotation properties
#################################################################

###  http://purl.org/dc/elements/1.1/creator
dc:creator rdf:type owl:AnnotationProperty .

###  http://purl.org/dc/elements/1.1/description
dc:description rdf:type owl:AnnotationProperty .

###  http://purl.org/dc/terms/license
dcterms:license rdf:type owl:AnnotationProperty .


#################################################################
#    Classes
#################################################################


pub:Publication rdf:type owl:Class ;
    rdfs:comment "Represents a publication." ;
    rdfs:label "Publication" .

pub:Author rdf:type owl:Class ;
    rdfs:comment "Represents an author of a publication." ;
    rdfs:label "Author" .

pub:Affiliation rdf:type owl:Class ;
    rdfs:comment "Represents an affiliation associated with a publication or author." ;
    rdfs:label "Affiliation" .

pub:Topic rdf:type owl:Class ;
    rdfs:comment "Represents a topic associated with a publication." ;
    rdfs:label "Topic" .

pub:Keyword rdf:type owl:Class ;
    rdfs:comment "Represents a keyword associated with a publication." ;
    rdfs:label "Keyword" .

pub:Domain rdf:type owl:Class ;
    rdfs:comment "Represents a subject domain of a publication." ;
    rdfs:label "Domain" .

#################################################################
#    Object Properties
#################################################################

pub:hasAuthor rdf:type owl:ObjectProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range pub:Author ;
    rdfs:comment "Links a publication to its authors." ;
    rdfs:label "has author" .

pub:hasAffiliation rdf:type owl:ObjectProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range pub:Affiliation ;
    rdfs:comment "Links a publication to its affiliation(s)." ;
    rdfs:label "has affiliation" .

pub:hasKeyword rdf:type owl:ObjectProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range pub:Keyword ;
    rdfs:comment "Links a publication to its keywords." ;
    rdfs:label "has keyword" .

pub:hasTopic rdf:type owl:ObjectProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range pub:Topic ;
    rdfs:comment "Links a publication to its topics." ;
    rdfs:label "has topic" .

pub:hasDomain rdf:type owl:ObjectProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range pub:Domain ;
    rdfs:comment "Links a publication to its domain(s)." ;
    rdfs:label "has domain" .

#################################################################
#    Data properties
#################################################################

pub:doi rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:string ;
    rdfs:comment "The DOI of the publication." ;
    rdfs:label "DOI" .

pub:title rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:string ;
    rdfs:comment "The title of the publication." ;
    rdfs:label "Title" .

pub:abstract rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:string ;
    rdfs:comment "The abstract of the publication." ;
    rdfs:label "Abstract" .

pub:introduction rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:string ;
    rdfs:comment "The introduction of the publication." ;
    rdfs:label "Introduction" .

pub:conclusion rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:string ;
    rdfs:comment "The conclusion of the publication." ;
    rdfs:label "Conclusion" .

pub:publicationDate rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:date ;
    rdfs:comment "The publication date." ;
    rdfs:label "Publication Date" .

pub:publisher rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:string ;
    rdfs:comment "The publisher of the publication." ;
    rdfs:label "Publisher" .

pub:organisation rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:string ;
    rdfs:comment "The organisation this publication belongs to." ;
    rdfs:label "Publisher" .

pub:language rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:string ;
    rdfs:comment "The language of the publication." ;
    rdfs:label "Language" .

pub:pdfUrl rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:anyURI ;
    rdfs:comment "URL to access the publication's PDF." ;
    rdfs:label "PDF URL" .

pub:score rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:float ;
    rdfs:comment "The score of the publication." ;
    rdfs:label "Score" .

pub:matchScore rdf:type owl:DatatypeProperty ;
    rdfs:domain pub:Publication ;
    rdfs:range xsd:float ;
    rdfs:comment "The match score of the publication." ;
    rdfs:label "Match Score" .